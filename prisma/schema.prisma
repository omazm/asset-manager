generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model AssetType {
  id        String   @id @default(cuid())
  name      String   @unique
  svgData   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assets    Asset[]

  @@map("asset_types")
}

model Asset {
  id           String    @id @default(cuid())
  label        String
  assignedTo   String
  assetTypeId  String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  assetType    AssetType @relation(fields: [assetTypeId], references: [id], onDelete: Cascade)
  
  @@map("assets")
}
